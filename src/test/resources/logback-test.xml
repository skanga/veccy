<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set default log level to WARN for all loggers -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Suppress noisy third-party library logs -->
    <logger name="org.apache.pdfbox" level="ERROR" />
    <logger name="org.apache.poi" level="ERROR" />
    <logger name="org.nd4j" level="ERROR" />
    <logger name="ai.onnxruntime" level="ERROR" />
    <logger name="smile" level="ERROR" />

    <!-- You can enable DEBUG for specific packages if needed for debugging:
    <logger name="com.veccy.indices" level="DEBUG" />
    <logger name="com.veccy.storage" level="DEBUG" />
    -->
</configuration>
